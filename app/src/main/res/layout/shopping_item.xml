<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="model"
            type="mbitsystem.com.shopping.data.model.ShoppingItem" />

        <variable
            name="listener"
            type="mbitsystem.com.shopping.presentation.details.DetailsListViewModel" />
    </data>
        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="8dp"
            android:text="@{model.name}"
            android:gravity="start|center"
            android:textColor="@color/black_light"
            android:textSize="18sp"
            tools:text="Dla Twojej wygody w wybranych procesach\nuzupełniamy imię i nazwisko za Ciebie." />
</layout>